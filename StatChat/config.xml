<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget version="0.7.0" android-packageName="com.visionit.android.caretrail" id="com.visionit.caretrail" ios-CFBundleIdentifier="com.visionit.caretrail" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Caretrail</name>
  <description>Caretrail is a care team management solution that enables healthcare professionals to instantly and securely communicate a wide range of healthcare information- including patient data- on their mobile device. It includes a powerful on-call management tool, a secure web-based portal, and rich administrative features.</description>
  <author email="dzabihaylo@visionit.com" href="http://www.caretrail.io/"/>
  <content src="index.html"/>
  <access origin="*"/>
  <access origin="https://23.96.208.231" subdomains="true"/>
  <access origin="https://vittestapp.azurewebsites.net" subdomains="true"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://vittestapp.azurewebsites.net/*/*/*"/>
  <allow-intent href="https://visionitdev.cloudapp.net/*/*/*"/>
  <allow-intent href="https://23.96.208.231/*/*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <allow-navigation href="http://*/*"/>
  <allow-navigation href="https://*/*"/>
  <allow-navigation href="data:*"/>
